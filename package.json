{
	"name": "tg_slot",
	"version": "1.0.0",
	"description": "Telegram Slot game",
	"main": "webpack.config.js",
	"keywords": [
		"telegram",
		"slot",
		"game"
	],
	"author": "Maxim Shmakov <mvshmakov@mail.ru>",
	"license": "Apache-2.0",
	"scripts": {
		"start": "npm-run-all --parallel watch:build watch:server",
		"watch:build": "gulp",
		"watch:server": "nodemon './server/index.js' --watch './server'",
		"precommit": "npm run lint || npm run lint:fix",
		"lint": "eslint *.js server/*.js client/*.js",
		"lint:fix": "eslint *.js server/*.js client/*.js --fix",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"engines": {
		"node": "8.9.x",
		"npm": "5.6.x"
	},
	"dependencies": {
		"body-parser": "^1.18.3",
		"dotenv": "^5.0.1",
		"express": "^4.17.3",
		"express-favicon": "^2.0.1",
		"fs": "0.0.1-security",
		"npm-run-all": "^4.1.3",
		"telegraf": "^3.19.0",
		"telegraf-i18n": "^6.1.1"
	},
	"devDependencies": {
		"babel-preset-es2015": "^6.18.0",
		"browser-sync": "^2.14.0",
		"eslint": "^4.18.2",
		"eslint-config-airbnb-base": "^12.1.0",
		"eslint-plugin-import": "^2.9.0",
		"gulp": "~3.9.1",
		"gulp-autoprefixer": "~2.3.1",
		"gulp-babel": "^6.1.2",
		"gulp-less": "~3.1.0",
		"gulp-load-plugins": "~1.2.4",
		"gulp-plumber": "~1.1.0",
		"gulp-sourcemaps": "~1.6.0",
		"nodemon": "^1.18.3"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/mvshmakov/tg-slot.git"
	},
	"bugs": {
		"url": "https://github.com/mvshmakov/tg-slot/issues"
	}
}
